<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Mypage">


    <!--로그인 한 아이디로 RegTBL에 저장된 사용자 정보를 가져와 보여주는 xml파일이다.-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/typo_ssangmundongb"
        android:text="&#60;EasyCook 사용자 정보&#62;"
        android:textColor="#1E1E1E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_ssangmundongb"
            android:text="아이디"/>
        <TextView
            android:id="@+id/edt_id"
            android:layout_width="match_parent"
            android:fontFamily="@font/typo_ssangmundongb"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_ssangmundongb"
            android:text="이름"/>
        <TextView
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:fontFamily="@font/typo_ssangmundongb"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_ssangmundongb"
            android:text="번호"/>
        <TextView
            android:id="@+id/edt_tel"
            android:layout_width="match_parent"
            android:fontFamily="@font/typo_ssangmundongb"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_ssangmundongb"
            android:text="생년월일"/>
        <TextView
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:fontFamily="@font/typo_ssangmundongb"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_ssangmundongb"
            android:text="이메일"/>
        <TextView
            android:id="@+id/edt_birth"
            android:layout_width="match_parent"
            android:fontFamily="@font/typo_ssangmundongb"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/foods" />

</LinearLayout>